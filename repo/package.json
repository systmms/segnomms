{
  "name": "segnomms-repo-tooling",
  "version": "1.0.0",
  "private": true,
  "description": "Repository tooling and scripts for SegnoMMS project",
  "type": "module",
  "scripts": {
    "validate-events": "node gha/scripts/validate-event-payloads.mjs gha/events/*.json gha/tests/**/*.json",
    "validate-events-format": "node gha/scripts/validate-event-payloads.mjs --format gha/events/*.json gha/tests/**/*.json",
    "validate-events-staged": "node gha/scripts/validate-event-payloads.mjs --format --git-add",
    "test-act": "./gha/scripts/act-precommit.sh",
    "install-deps": "npm install"
  },
  "keywords": [
    "github-actions",
    "testing",
    "validation",
    "webhooks",
    "act"
  ],
  "author": "SegnoMMS Project",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "@octokit/webhooks-schemas": "^7.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jonshaffer/segnomms.git",
    "directory": "repo"
  },
  "directories": {
    "test": "gha/tests"
  }
}
