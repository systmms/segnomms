# Enable Nix flakes for this project
use flake

# Optional: Set any project-specific environment variables
# export EXAMPLE_VAR="value"

# Optional: Add project bin directory to PATH if it exists
if [ -d "$PWD/bin" ]; then
  PATH_add "$PWD/bin"
fi

# Optional: Add scripts directory to PATH if it exists
if [ -d "$PWD/scripts" ]; then
  PATH_add "$PWD/scripts"
fi
