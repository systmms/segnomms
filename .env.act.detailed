# Enhanced environment configuration for nektos/act testing
# Provides comprehensive GitHub Actions simulation environment

# GitHub Context
GITHUB_ACTOR=systmms-ci-test
GITHUB_REPOSITORY=systmms/segnomms
GITHUB_REPOSITORY_OWNER=systmms
GITHUB_SHA=8e13e053d0aa15715a2ac3b7a2dcf6b97dbf0d94
GITHUB_REF=refs/heads/main
GITHUB_HEAD_REF=feature/cspell-migration
GITHUB_BASE_REF=main
GITHUB_EVENT_NAME=push
GITHUB_WORKFLOW=Test
GITHUB_RUN_ID=123456789
GITHUB_RUN_NUMBER=42
GITHUB_JOB=test
GITHUB_ACTION=__run
GITHUB_ACTIONS=true
GITHUB_EVENT_PATH=/github/workflow/event.json
GITHUB_WORKSPACE=/github/workspace
GITHUB_API_URL=https://api.github.com
GITHUB_GRAPHQL_URL=https://api.github.com/graphql
GITHUB_SERVER_URL=https://github.com

# CI Environment
CI=true
RUNNER_OS=Linux
RUNNER_ARCH=X64
RUNNER_NAME=GitHub Actions 2
RUNNER_TEMP=/tmp
RUNNER_TOOL_CACHE=/opt/hostedtoolcache

# Python Environment
PYTHON_VERSION=3.11
PYTHONPATH=/github/workspace
PYTHONIOENCODING=utf-8
PYTHONUNBUFFERED=1

# UV Package Manager
UV_CACHE_DIR=/tmp/uv-cache
UV_PYTHON_DOWNLOADS=automatic
UV_SYSTEM_PYTHON=1

# Node.js Environment (for cspell)
NODE_VERSION=18
NODE_ENV=test
NPM_CONFIG_CACHE=/tmp/npm-cache
NPM_CONFIG_UPDATE_NOTIFIER=false

# Testing Configuration
PYTEST_CURRENT_TEST=""
COVERAGE_CORE=sysconfig

# Documentation Build
SPHINXOPTS=-W --keep-going
SPHINX_BUILD_DIR=/github/workspace/docs/build
READTHEDOCS=false

# Security and Quality
BANDIT_CONFIG_FILE=/github/workspace/.bandit
MYPY_CACHE_DIR=/tmp/mypy-cache
FLAKE8_CONFIG=/github/workspace/pyproject.toml

# Act-specific overrides
ACTIONS_STEP_DEBUG=true
ACTIONS_RUNNER_DEBUG=true

# Cache Configuration
ACTIONS_CACHE_URL=
ACTIONS_RUNTIME_TOKEN=
ACTIONS_RUNTIME_URL=

# Secrets (mock values for testing)
GITHUB_TOKEN=ghp_test_token_for_local_testing
CODECOV_TOKEN=test-codecov-token
